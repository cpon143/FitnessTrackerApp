<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Existing gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFD400"
                android:centerColor="#EE82EE"
                android:endColor="#EE82EE"
                android:angle="45" />
        </shape>
    </item>

    <!-- Semi-transparent glossy layer (frosted glass effect) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#66000000" /> <!-- Semi-transparent black for the glassy effect -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Optional glossy reflection highlight (without padding) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#66FFFFFF" /> <!-- Light gloss color -->
            <corners android:radius="12dp" />
        </shape>
    </item>

</layer-list>
