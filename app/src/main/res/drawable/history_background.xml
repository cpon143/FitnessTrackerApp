            <corners android:radius="25dp"/>
            <solid android:color="#FF3D8A8A"/>
            <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="25dp"/>
            <solid android:color="#FF009688"/>
        </shape>
    </item>
</selector>