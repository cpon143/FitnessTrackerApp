<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background layer for the progress bar -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Light gray for the background -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Progress layer (the fill of the progress bar) -->
    <item android:id="@android:id/progress">
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50" /> <!-- Green color for the progress -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</layer-list>
